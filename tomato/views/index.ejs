<!DOCTYPE html>
<html ng-app="TomatoApp" ng-controller="TomatoesController as tomatoes">
<head>
  <meta charset="UTF-8">
  <title>Tomato Keeper</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="/jquery/dist/jquery.js"></script>
  <script src="/angular/angular.js"></script>
  <script src="/angular-route/angular-route.js"></script>
  <script src="/angular-animate/angular-animate.js"></script>
  <script src="/js/app.js"></script>
  <script src="/js/tomatoes_controller.js"></script>
  <style src="/css/animate.css"></style>
</head>
<body>
  <h1>Tomatoes Are So Good</h1>
  <div>
    <a href="" ng-click="render()">View All Tomatoes</a>

      <ul ng-repeat="tomatoes in tomatoes | orderBy:'name'"> 
       
        <li>
          <a href="#/tomatoes/{{tomatoes.name}}">{{tomatoes.name}}</a>
        </li>

      <div class="view-animate-container">
        <div ng-view class="view-animate"></div>
      </div>
      
  </div>

</body>
</html>